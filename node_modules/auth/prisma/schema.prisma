generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  phone            String   @unique
  email            String   @unique
  firstName        String
  lastName         String
  createdAt        DateTime @default(now())

  @@index([phone , email , firstName , lastName])
}

model OtpCode {
  id        Int      @id @default(autoincrement())
  phone     String
  otp       String
  expireAt  DateTime
  createdAt DateTime @default(now())

  @@index([phone, otp])
}